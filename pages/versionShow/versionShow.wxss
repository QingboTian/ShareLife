/* pages/versionShow/versionShow.wxss */
page {
  height: 100%;
  background-color: #f0f0f0;
  /* margin: 0 20rpx; */
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  /* margin: 0 20rpx; */
}

.c-item {
  margin: 10rpx 20rpx;
}

.title {
  display: flex;
  justify-content: center;
  font-size: large;
}

.time {
  display: flex;
  color: gray;
  font-size: small;
}

.time .item {
  flex: 1;
}

.introduce {
  color: gray;
}

.content {
  display: flex;
  justify-content: center;
  background-color: #fff;
  flex: 1;
  border-radius: 15rpx;
  padding: 20rpx 20rpx;
}