/* pages/video/video.wxss */
page {
  height: 100%;
  background-color: #f0f0f0;
}

/* .top {
  height: 50%;
} */

.container {
  height: 100%;
}

/* 在滑动过程中将最上面的作者信息隐藏 */
.zhengti {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.author {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.author image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.author .name {
  color: red;
  margin-right: 20rpx;
}

.author .focus {
  font-size: 13px;
  padding: 0 10rpx;
  border: 1px solid green;
  background-color: greenyellow;
  border-radius: 15rpx;
}

.content {
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.video{
  margin-top: 20rpx;
}

.video video{
  width: 100%;
}

.video .option{
  margin-top: 10rpx;
  display: flex;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.video .option image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 5rpx;
}

.video .option .like{
  flex: 1;
  display: flex;
  align-items: center;
}

.video .option .comment{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.video .option .collect{
  flex: 1;
  display: flex;
  /* float: right; */
  /* justify-content: left; */
}

.comment-list {
  flex: 1;
  margin-top: 20rpx;
  /* 标记 此处隐藏不起作用 */
  overflow: hidden;
}

.comment-list .item .discussant image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.comment-list .item .comment image{
  width: 50rpx;
  height: 50rpx;
  /* border-radius: 50%; */
  /* margin-left: 20rpx;
  margin-right: 20rpx; */
}

.comment-list .item{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.comment-list .item .discussant{
  display: flex;
  align-items: center;
}

.comment-list .item .comment{
  display: flex;
  margin-top: 10rpx;
  /* align-items: center; */
}

.comment-list .item .text{
  flex: 1;
}

.comment-list .item .like{
  display: flex;
  margin-right: 20rpx;
  align-items: center;
}