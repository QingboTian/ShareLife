page {
  width: 100%;
  height: 100%;
  background-color: #F0F0F0;
}

.container-flowlayout {
  display: flex;
}

.searchResult {
  /* height: 100px; */
  background-color: #fff;
  border-radius: 15rpx;
  margin-bottom: 15rpx;
  box-shadow: 5rpx 5rpx 5rpx rgb(210,210,210)
}

.searchResult .res{
  border-bottom: 1px solid #e0e0e0;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  display: flex;
  justify-content: center;
  padding: 15rpx 20rpx;
  font-weight: bloder;
  align-items: center;
}

.searchResult .res .resTypeP {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 5rpx;
  height: 14px;
  width: 20px;
  font-size: 10px;
  background-color: red;
  /* color: greenyellow; */
  border-radius: 10rpx;
  padding: 0 20rpx;
}

.searchResult .res .resTypeU {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 5rpx;
  height: 14px;
  width: 20px;
  font-size: 10px;
  background-color: greenyellow;
  /* color: greenyellow; */
  border-radius: 10rpx;
  padding: 0 20rpx;
}

.item {
  flex: 1;
  margin: 0 5rpx;
  /* margin-bottom: 10rpx; */
}

.item .product image {
  width: 100%;
  margin: 4rpx 0;
  /* 缓慢效果 */
  transition: all 0.3s ease-in-out;
}

.item .entry {
  background-color: white;
  border: 10rpx solid white;
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
}

.item .entry .author-type{
  display: flex;
  width: 100%;
}

.item .entry .author-type .poster image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.item .entry .author-type .type image{
  width: 30rpx;
  height: 30rpx;
  /* border-radius: 50%; */
}

.item .entry .author-type .poster{
  flex: 1;
}

.bottom {
  color: #8a8a8a;
  display: flex;
  justify-content: center;
}