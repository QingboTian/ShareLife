<!--pages/comment/comment.wxml-->
<view class="container" bindtouchstart="touchStartHandler" bindtouchend="touchEndHandler">
  <view class="tabbar">
    <view class="item {{isChoose ? 'isChoose' : ''}}" catchtap="switchTabHandler" data-id="0">评论我的    </view>
    <view class="item {{!isChoose ? 'isChoose' : ''}}" catchtap="switchTabHandler" data-id="1">我评论的</view>
  </view>


  <scroll-view class="body" scroll-y>
    <!-- 评论我的 -->
    <view class="other2me" hidden="{{!showFlag}}">
      <block wx:for="{{other2me}}" wx:for-item="item" wx:key="index">
        <view class="item">
          <view class="poster"><image src="{{item.poster}}"></image></view>
          <view class="body">
            <view class="name">{{item.name}}</view>
            <view class="content">{{item.content}}</view>
          </view>
          <view class="footer">
            <image src="{{item.src}}" mode="aspectFill"></image>
          </view>
        </view>
      </block>
    </view>
    <!-- 我评论的 -->
    <view class="me2other"  hidden="{{showFlag}}">
      <block wx:for="{{me2other}}" wx:for-item="item" wx:key="index">
        <view class="item">
          <view class="poster"><image src="{{item.poster}}"></image></view>
          <view class="body">
            <view class="name">{{item.name}}</view>
            <view class="content">{{item.content}}</view>
          </view>
          <view class="footer">
            <image src="{{item.src}}" mode="aspectFill"></image>
          </view>
        </view>
      </block>
    </view>
  </scroll-view>
</view>
