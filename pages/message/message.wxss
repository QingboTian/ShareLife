/* pages/message/message.wxss */
page {
  width: 100%;
  height: 100%;
  /* background-color: #F0F0F0; */
}

/* 没有消息显示的内容 */
.container-none {
  margin-top: 35%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.image image{
  width: 180px;
}
/* image {
  width: 178px;
  height: 202px;
} */

.container {
  margin-top: 30rpx;
  height: 100%;
  /* background-color: #f0f0f0; */
  display: flex;
  flex-direction: column;
}

.container .item {
  display: flex;
  border-bottom: 1px solid #e2e2e2;
  /* justify-content: center;
  align-items: center; */
}

.container .item image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.container .item .poster{
  margin-right: 20rpx;
}

.container .item .body{
  flex: 1;
  margin-top: 10rpx;
}

.container .item .body .content{
  margin-top: 10rpx;
  font-size: 12px;
  color: #d2d2d2;
}

.container .item .warn .time{
  margin-top: 10rpx;
  margin-right: 30rpx;
  font-size: 12px;
  color: #d2d2d2;
}

/* 自动判断的css样式 是否存在新消息 */
.container .item .warn .new{
  width: 15rpx;
  height: 15rpx;
  background-color: red;
  border-radius: 50%;
  margin-top: 20rpx;
  margin-left: 30rpx;
  /* margin-right: 15rpx; */
}