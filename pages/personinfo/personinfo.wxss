/* pages/personinfo/personinfo.wxss */
page {
  height: 100%;
  background-color: #f0f0f0;
}

.touxiang .poster image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.touxiang .poster {
  position:relative;
}

.touxiang .camera image{
  width: 70rpx;
  height: 70rpx;
}

/* 子元素相对于父元素上下左右居中 */
/* 父元素必须设置属性 position:relative; */
.touxiang .camera {
  position:absolute;
  /* left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto; */
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}

.touxiang {
  margin: 50rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* text-align: center; */
  font-size: 12px;
  color: #bfbfbf;
}