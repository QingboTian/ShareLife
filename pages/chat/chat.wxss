/* pages/chat/chat.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #f0f0f0
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.container .chat{
  flex: 95;
  overflow: hidden;
}

.right-item {
  display: flex;
}

.left-item {
  display: flex;
}

.item {
  margin: 10rpx 20rpx;
  width: 100%;
}

.container .chat .item .time{
  text-align: center;
}

.blank {
  flex: 1;
}

.container .chat .item .body{
  display: flex;
  /* justify-content: center; */
  align-items: center;
  margin-right: 40rpx;

}

.container .chat .item .body image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.container .chat .item .content {
  padding: 10rpx 20rpx;
  /* height: 50rpx; */
  display: flex;
  align-items: center;
  justify-items: center;
  /* background-color: greenyellow; */
  border-radius: 10rpx;
  margin: 0 20rpx;
}

.left-content {
  background-color: #fff;
}

.right-content {
  background-color: greenyellow;
}

.container .option{
  /* position: fixed; */
  flex: 5;
  display: flex;
  margin-bottom: 15rpx;
  align-items: center;
  
}

.container .option .edit image{
  padding: 2rpx;
  width: 45rpx;
  height: 45rpx;
  margin-right: 10rpx;
}

.container .option .edit{
  display: flex;
  align-items: center;
  flex: 9;
  border: 1px solid #000;
  background-color: #fff;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 15rpx;
  height: 60rpx;
}

.container .option .edit input{
  width: 100%;
}

.container .option .send{
  background-color: greenyellow;
  border: 1px solid green;
  padding: 2rpx 5rpx;
  height: 50rpx;
  border-radius: 8rpx;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}