/* pages/chat/chat.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #f0f0f0
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.container .chat{
  flex: 95;
  overflow: hidden;
}

.container .chat .item .time{
  text-align: center;
}

.container .chat .item .body{
  display: flex;
  /* justify-content: center; */
  align-items: center;
}

.container .chat .item .body image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.container .chat .item .content {
  padding: 2rpx 20rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-items: center;
  background-color: greenyellow;
  border-radius: 20rpx;
}

.container .option{
  /* position: fixed; */
  flex: 5;
  display: flex;
  margin-bottom: 15rpx;
  align-items: center;
}

.container .option .edit image{
  padding: 2rpx;
  width: 45rpx;
  height: 45rpx;
  margin-right: 10rpx;
}

.container .option .edit{
  display: flex;
  align-items: center;
  flex: 9;
  border: 1px solid #000;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 15rpx;
  height: 50rpx;
}

.container .option .edit input{
  width: 100%;
}

.container .option .send{
  background-color: greenyellow;
  padding: 2rpx 5rpx;
  height: 50rpx;
  border-radius: 15rpx;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}