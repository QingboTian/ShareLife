<!--pages/edit/edit.wxml-->
<view class='container'>
  <!-- 修改昵称 -->
  <view wx:if="{{type == 1}}" class='nick'>
    <view class='item nickname'>我的昵称</view>
    <view class='item input' >
      <input type='text' value='{{nickname}}' data-type='nickWordLength' bindinput='wordLength' placeholder='请输入昵称' maxlength="20" focus></input>
    </view>
    <view class='item tips'>{{nickWordLength}}/20</view>
  </view>

  <!-- 修改签名 -->
  <view wx:elif="{{type == 2}}" class='signature'>
    <view class='item name'>个性签名</view>
    <view class='item textarea' >
      <textarea value='{{signature}}' data-type='signatureWordLength' bindinput='wordLength' placeholder='这个人好懒哦，居然没有个性签名！' maxlength="50"  focus></textarea>
    </view>
    <view class='item tips'>{{signatureWordLength}}/50</view>
  </view>

  <!-- 修改手机 -->
  <view wx:elif="{{type == 3}}" class='phone'>
    <view class='item name'>手机号码</view>
    <view class='item input' >
      <input type='number' value='{{phone}}' data-type='phone' placeholder='请输入修改后的号码' maxlength="11"></input>
      <view class='checkBtn'><button type='primary' size='mini' disabled="{{checkBtnAble}}"  bindtap='sendCheckNum'>{{checkNumStr}}</button></view>
    </view>
    <view class='item checknum'>
      <input type='number' maxlength='6' placeholder='请输入验证码'></input>
    </view>
  </view>

  <!-- 修改邮箱 -->
  <view wx:elif="{{type == 4}}">

  </view>

  <!-- 修改性别 -->
  <view wx:elif="{{type == 5}}">

  </view>

  <!-- 修改生日 -->
  <view wx:elif="{{type == 6}}">

  </view>

  <!-- 修改地区 -->
  <view wx:elif="{{type == 7}}">

  </view>

  <!-- 错误页面 -->
  <view wx:else="{{type == -1}}">
    x
  </view>

  <view class='save'>
    <button type='primary'>保存</button>
  </view>
</view>
